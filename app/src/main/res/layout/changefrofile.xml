<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên đăng nhập"
            android:id="@+id/edtUserNameNew"
            android:textSize="18dp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true" >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:id="@+id/edtPassWordNew"
                android:layout_marginTop="17dp"
                android:textSize="18dp"
                android:enabled="true"
                />


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint=" Email "
                        android:id="@+id/edtEmail"
                        android:layout_marginTop="17dp"
                        android:textSize="18dp"
                        android:drawableEnd="@drawable/emailicon" />
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint=" FaceBook "
                            android:id="@+id/edtFaceBook"
                            android:layout_marginTop="17dp"
                            android:textSize="18dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sở thích"
                            android:layout_marginTop="17dp"
                            android:textSize="20dp"></TextView>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp">

                            <Button
                                android:id="@+id/favoVN"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginEnd="191dp"
                                android:layout_marginBottom="33dp"
                                android:text="Việt Nam">

                            </Button>

                            <Button
                                android:id="@+id/favoAnDo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="66dp"
                                android:layout_toStartOf="@+id/favoHQ"
                                android:text="Ấn Độ">

                            </Button>

                            <Button
                                android:id="@+id/favoHQ"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="26dp"
                                android:text="Hàn Quốc">

                            </Button>

                            <Button
                                android:id="@+id/favoTQ"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginEnd="29dp"
                                android:layout_marginBottom="37dp"
                                android:text="Trung Quốc">

                            </Button>

                            <TextView
                                android:id="@+id/tvshowFavo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="3dp"

                                android:textSize="17dp">


                            </TextView>
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="20dp">
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:text="Chỉnh sửa tài khoản"
                                android:id="@+id/btnCheckSignIn">


                            </Button>


                        </LinearLayout>


                </com.google.android.material.textfield.TextInputLayout>
            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.textfield.TextInputLayout>
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>